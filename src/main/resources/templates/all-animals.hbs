{{#partial "content"}}

    <div class="jumbotron">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" href="/">Home<span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link" href="/rangers/new">Add New Ranger</a>
                    <a class="nav-item nav-link" href="/animals/new">Add Sighting</a>
                    <a class="nav-item nav-link" href="/all/animals">View all Animals</a>
                </div>
            </div>
        </nav>
    </div>

    <h1> All sighted Animals</h1>

    {{#if animals}}
        {{#each animals }}
            <div id="each-ranger">
            <p id="each-rangerName"><a href="/rangers/{{rangerId}}/animals/{{id}}">{{animalName}}</a></p>
            </div>
        {{/each}}
    {{else}}
        <p>No animals</p>
    {{/if}}

    {{#if endangers}}
        {{#each endangers }}
            <p><a href="/rangers/{{rangerId}}/endangers/{{id}}">{{endangeredName}}</a></p>
        {{/each}}
    {{else}}
        <p>No Endangered Animals</p>
    {{/if}}
{{/partial}}

{{> layout.hbs}}